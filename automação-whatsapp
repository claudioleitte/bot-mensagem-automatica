import openpyxl
from urllib.parse import quote
import webbrowser
from time import sleep
import pyautogui


webbrowser.open('https://web.whatsapp.com/')
sleep(10)
pyautogui.hotkey('ctrl','w')
sleep(5)

#Ler planilha e guardar inf
workbook = openpyxl.load_workbook('testewpp.xlsx')
pagina_clientes = workbook['Planilha1']

#repetição do bot
for linha in pagina_clientes.iter_rows(min_row=2):
    nome = linha[0].value
    telefone = linha[1].value
    vencimento = linha[2].value

    #mesagem enviada
    mensagem = f'Olá {nome}, estou testando meu bot {vencimento.strftime("%d/%m/%Y")}.'

    #tentiva e relatorio de erro
    try:
        link_mensagem_whatsapp = f'https://web.whatsapp.com/send?phone={telefone}&text={quote(mensagem)}'
        webbrowser.open(link_mensagem_whatsapp)
        sleep(7)
        sleep(5)
        seta = pyautogui.locateCenterOnScreen('seta_2.png')
        pyautogui.click(seta[0],seta[1])
        sleep(5)
        pyautogui.hotkey('ctrl','w')
        sleep(5)
    except:
        print(f'Não foi possivel enviar mensagem para {nome}')
        
